{
  "manifest_version": 2,

  "name": "9gif",
  "description": "Use 9gif to extract gif url from 9gag post.",
  "version": "1.1",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://9gag.com/*"],
      "css": ["css/9gif.css"],
      "js": ["js/content.js", "js/move.js"]
    }
  ],
  "icons": {
    "16": "icons/9gif16.png",
    "48": "icons/9gif48.png",
    "128": "icons/9gif128.png"
  },
  "permissions" : [
    "contextMenus"
  ]
}
